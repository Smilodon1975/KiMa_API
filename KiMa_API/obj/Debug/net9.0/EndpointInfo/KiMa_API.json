          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/admin/set-role": {
      "post": {
        "tags": [
          "Admin"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SetRoleModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/SetRoleModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/SetRoleModel"
              }
            }
          }
